@model IDGS904_tema1.Models.OperasBas

@{
    ViewBag.Title = "Calcular";
}

<h2>Calcular</h2>
<div class="container">
    <div class="row div col-lg-6">
        <form action="/" method="post">
            <label for="n1">Numero 1</label>
            <input type="text" name="Num1" value="" /><br />
            <label for="n2">Numero 2</label>
            <input type="text" name="Num2" value="" /><br />
            <input type="radio" id="suma" name="Operacion" value="suma" /> Sumar
            <input type="radio" id="resta" name="Operacion" value="resta" /> Restar
            <input type="radio" id="multiplicar" name="Operacion" value="multiplicar" /> Multiplicar
            <input type="radio" id="dividir" name="Operacion" value="dividir" /> Dividir<br />
            <input type="submit" name="cal" value="Calcular" />
        </form>
    </div>
    <div class="row div col-lg-6">
        <h1>El resultado es: @Html.DisplayFor(model => model.Res)</h1>
    </div>
</div>

