@model IDGS904_tema1.Models.Traductor

@{
    ViewBag.Title = "Registrar";
}

<h2>Traductor (Guardar)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Español, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Español, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Español, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-outline-dark rounded-pill px-5 mt-5" />
            </div>
        </div>
    </div>
}

@{ 
    string table = bool.Parse(Request.QueryString["table"] ?? "false") ? "false" : "true";
}

<a href="?table=@table">Mostrar</a>

@if (bool.Parse(Request.QueryString["table"] ?? "false"))
            {
<table class="table">
    <thead>
        <tr>
            <th>Español</th>
            <th>Ingles</th>
        </tr>
    </thead>
    <tr>
        @foreach (string tem in ViewBag.Archivo)
        {
            <tr>
                    @foreach (string item in tem.Split(','))
                    {
                        <td>@item</td>
                    }
            </tr>
        }
    </tr>
</table>
            }

<div>
    @Html.ActionLink("Traductor", "Traduccion")
</div>
